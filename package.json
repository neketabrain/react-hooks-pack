{
  "name": "react-hooks-pack",
  "version": "0.2.0",
  "description": "React hooks collection",
  "publishConfig": {
    "access": "public"
  },
  "author": "Nikita Karapuzov <karapuzov.nikita@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neketabrain/react-hooks-pack"
  },
  "homepage": "https://github.com/neketabrain/react-hooks-pack",
  "bugs": "https://github.com/neketabrain/react-hooks-pack/issues",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "react-hooks",
    "utils",
    "tools",
    "helpers"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "browser": "dist/index.bundle.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "rollup -cw",
    "build": "npm run clean && rollup -c",
    "deploy": "npm run build && npm publish",
    "lint": "eslint --cache src/**/*.{js,ts,jsx,tsx}"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "path": "^0.12.7",
    "prettier": "^2.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".{js,ts,jsx.tsx}": [
      "npm run lint --fix",
      "git add"
    ]
  }
}
