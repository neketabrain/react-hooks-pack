{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"]
}
